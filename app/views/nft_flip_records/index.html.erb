<div class="container">
  <section class="row mb-5">
    <div class="col-6">
      <h1>Trade Solana NFTs In One Place</h1>
      <div>
        <h3>NftFliper is the #1 Solana NFT aggregator marketplace. The fastest NFT marketplace is developed by some of the top OG engineers and product managers from Facebook and Uber.</h3>
        <h3>Explore the market to get started.</h3>
      </div>
    </div>
    <div class="col-6">
      <a href="/nft_flip_records/collection_detail?slug=<%= @top_collection[0] %>">
        <div>
          <div>
            <div>
              <%= image_tag @top_collection[6], width: "100%" %>
            </div>
          </div>
        </div>
      </a>
      <div class="text-black ms-3 text-end">
        <h3 class="pt-3 mb-3 fw-bolder"><%= @top_collection[0] %></h3>
        <p>
          Average price: <span><span>◎</span><%= "#{decimal_format @top_collection[3]} #{@top_collection[4]}" %></span>
        </p>
        <p>
          Volume: <span><span>◎</span><%= "#{decimal_format @top_collection[7]} #{@top_collection[4]}" %></span>
        </p>
      </div>
    </div>
  </section>
  <section class="mx-5">
    <h2 class="text-center">Latest 10 Fliper Data</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Collection</th>
          <th><%= t("views.labels.price_notice") %></th>
          <th><%= t("views.labels.date_notice") %></th>
          <th><%= t("views.labels.gap") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render "records" %>
      </tbody>
    </table>
  </section>
  <section class="mt-5 row justify-content-between mx-5">
    <h2 class="text-center mb-3">Top 15 collections by flip count</h2>
    <% @top_collections.each_with_index do |collection, idx| %>
      <div class="card col-3 me-3" style="width:350px">
        <div class="card-body">
          <div class="logo">
            <span class="badge"><%= idx + 1 %></span>
            <%= image_tag collection[8], size: "60x60", class: "rounded-circle" %>
            <%= collection[0] %>
          </div>
          <div class="mt-3">
            Average price: <span><span>◎</span><%= "#{decimal_format collection[3]} #{collection[4]}" %></span>
          </div>
          <div class="mt-3">
            Volume: <span><span>◎</span><%= "#{decimal_format collection[7]} #{collection[4]}" %></span>
          </div>
        </div>
      </div>
    <% end %>
  </section>
</div>