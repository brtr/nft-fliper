<div class="row mx-4">
  <%= form_tag trending_nft_flip_records_path, class: "period_targets mb-4", method: "GET" do %>
    <div class="col-12">
      <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
        <%= radio_button_tag :period, "day", params[:period] == "day", class: "btn-check", id: "btnradio1" %>
        <label class="btn btn-outline-primary day" for="btnradio1"><%= t("datetime.prompts.day") %></label>
        <%= radio_button_tag :period, "week", params[:period] == "week", class: "btn-check", id: "btnradio2" %>
        <label class="btn btn-outline-primary week" for="btnradio2"><%= t("datetime.prompts.week") %></label>
        <%= radio_button_tag :period, "month", params[:period] == "month", class: "btn-check", id: "btnradio3" %>
        <label class="btn btn-outline-primary month" for="btnradio3"><%= t("datetime.prompts.month") %></label>
      </div>
    </div>
  <% end %>
  <div class="tab-content">
    <h3 class="mt-4"><%= t("views.labels.top_profit", period: t("datetime.prompts.#{params[:period] || "day"}")) %> NFTs</h3>
    <table class="table">
      <thead>
        <tr>
          <th><%= t("views.labels.rank") %></th>
          <th>NFT</th>
          <th><%= t("views.labels.count") %></th>
          <th><%= t("views.labels.revenue") %></th>
          <th><%= t("views.labels.average_price") %></th>
          <th><%= t("views.labels.average_gap") %></th>
          <th><%= t("views.labels.average_revenue") %></th>
        </tr>
      </thead>
      <tbody>
        <% @top_collections.each_with_index do |collection, idx| %>
          <tr>
            <td><%= idx + 1 %></td>
            <td style="width:5%"><%= link_to collection[0], collection_detail_nft_flip_records_path(slug: collection[0]) %></td>
            <td><%= collection[1] %></td>
            <td><%= collection[2] %></td>
            <td><%= "#{decimal_format collection[3]} #{collection[4]}" %></td>
            <td><%= humanize_gap(collection[5]) %></td>
            <td><%= collection[9] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <h3><%= t("views.labels.top_profit", period: t("datetime.prompts.#{params[:period] || "day"}")) %> Flipers</h3>
    <table class="table">
      <thead>
        <tr>
          <th><%= t("views.labels.rank") %></th>
          <th>Fliper</th>
          <th><%= t("views.labels.count") %></th>
          <th><%= t("views.labels.revenue") %></th>
          <th><%= t("views.labels.average_price") %></th>
          <th><%= t("views.labels.average_gap") %></th>
          <th><%= t("views.labels.average_revenue") %></th>
        </tr>
      </thead>
      <tbody>
        <% @top_flipers.each_with_index do |fliper, idx| %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><%= link_to address_format(fliper[0]), fliper_detail_nft_flip_records_path(fliper_address: fliper[0]) %></td>
            <td><%= fliper[1] %></td>
            <td><%= fliper[2] %></td>
            <td><%= "#{decimal_format fliper[3]} #{fliper[4]}" %></td>
            <td><%= humanize_gap(fliper[5]) %></td>
            <td><%= fliper[9] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <h3 class="mt-4"><%= t("views.labels.top_loss", period: t("datetime.prompts.#{params[:period] || "day"}")) %> NFTs</h3>
    <table class="table">
      <thead>
        <tr>
          <th><%= t("views.labels.rank") %></th>
          <th>NFT</th>
          <th><%= t("views.labels.count") %></th>
          <th><%= t("views.labels.loss") %></th>
          <th><%= t("views.labels.average_price") %></th>
          <th><%= t("views.labels.average_gap") %></th>
          <th><%= t("views.labels.average_revenue") %></th>
        </tr>
      </thead>
      <tbody>
        <% @last_collections.each_with_index do |collection, idx| %>
          <tr>
            <td><%= idx + 1 %></td>
            <td style="width: 5%"><%= link_to collection[0], collection_detail_nft_flip_records_path(slug: collection[0]) %></td>
            <td><%= collection[1] %></td>
            <td><%= collection[2] %></td>
            <td><%= "#{decimal_format collection[3]} #{collection[4]}" %></td>
            <td><%= humanize_gap(collection[5]) %></td>
            <td><%= collection[9] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>