trade_current_page = <%= @trade_records.current_page %>
if ($("#trade_current_page").val() < trade_current_page) {
  $("#trade_list").append("<%= j render partial:'trade_records' %>");
  $("#trade_current_page").val(trade_current_page);
}

listing_current_page = <%= @listing_items.current_page %>
if ($("#listing_current_page").val() < listing_current_page) {
  $("#listing_items").append("<%= j render partial:'listing_items' %>");
  $("#listing_current_page").val(listing_current_page);
}