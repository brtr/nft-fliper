<% @trade_records.each do |trade| %>
  <div class="card" style="height: 90px">
    <div class="card-body row">
      <div class="logo col-6">
        <%= image_tag chain_logo_path(trade.nft_id), size: "30x30" %>
        <%= "##{trade.token_id.truncate(10)}" %>
      </div>
      <div class="text-end col-6">
        <p>
          <%= decimal_format trade.trade_price %>
          <%= link_to trade.permalink, class: "card-link", target: "_blank" do %>
            <%= image_tag "opensea_blue.svg" %>
          <% end %>
        </p>
        <h5><%= "#{time_ago_in_words trade.trade_time} 之前" %></h5>
      </div>
    </div>
  </div>
<% end %>