<!DOCTYPE html>
<html>
  <head>
    <title>Nft-Fliper</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script type="text/javascript" src="https://app.web3ads.net/main.js" async></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-JZYBEV4DG6"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-JZYBEV4DG6');
    </script>
  </head>

  <body data-theme="dark">
    <div class="wrapper">
      <div class="main">
        <nav class="navbar navbar-expand navbar-light navbar-bg">
          <a class="sidebar-brand" href="/">
            <%= image_tag "logo.png", size: "50x50" %>
          </a>
          <div>
            <select class="js-data-example-ajax" placeholder="Search...">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search align-middle"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
            </select>
					</div>
          <div class="sidebar-item <%= @page_index == 1 ? 'active' : '' %>">
            <%= link_to root_path, class: "sidebar-link" do %>
              <span class="align-middle">Home</span>
            <% end %>
          </div>
          <div class="sidebar-item <%= @page_index == 2 ? 'active' : '' %>">
            <%= link_to trending_nft_flip_records_path, class: "sidebar-link" do %>
              <span class="align-middle">Trending</span>
            <% end %>
          </div>
          <div class="sidebar-item <%= @page_index == 3 ? 'active' : '' %>">
            <%= link_to flip_flow_nft_flip_records_path, class: "sidebar-link" do %>
              <span class="align-middle">Flip Flow</span>
            <% end %>
          </div>
          <div class="align-items-center order-lg-3 ms-lg-auto loginBtns">
            <div class="navbar-tool dropdown connect-btn">
              <%= link_to "Connect Metamask", "#", class: "btn btn-warning", id: "loginBtn" %>
            </div>
            <div class="navbar-tool dropdown hide">
              <a href="#" role="button" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                <h4 id="login_address" class="d-inline-block"></h4>
              </a>
              <div class="dropdown-menu dropdown-menu-end">
                <%= link_to "#", class: "dropdown-item", id: "logoutBtn" do %>
                  <i class="ai-log-out fs-base me-2"></i>
                  <span>Sign out</span>
                <% end %>
              </div>
            </div>
          </div>
        </nav>
        <main class="content">
          <%= render "layouts/notices" %>
          <%= yield %>
        </main>
      </div>
    </div>
    <div id="spinner" class="hide">
      <%= image_tag("loading.svg") %>
    </div>
  </body>
</html>
